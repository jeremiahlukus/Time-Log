<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Time Log App alert", sticky: false) %>

<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Time Log App error", sticky: false) %>

<% else %>
  <%= js add_gritter(flash[:notice], title: "Time Log App Notification", sticky: false) %>
<% end %>

